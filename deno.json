{
	"name": "@july/snarl",
	"description": "a minimal web framework for deno",
	"version": "0.2.2",
	"license": "LGPL-3.0-or-later",
	"exports": {
		".": "./mod.ts",
		"./jsx-runtime": "./jsx-runtime.ts",
		"./jsx-dev-runtime": "./jsx-runtime.ts"
	},
	"tasks": {
		"dev": "deno run --allow-net --watch src/main.tsx"
	},
	"imports": {
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@std/http": "jsr:@std/http@^1.0.23"
	},
	"fmt": {
		"useTabs": true,
		"semiColons": true,
		"lineWidth": 120
	},
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "@july/snarl",
		"lib": ["deno.ns", "dom", "dom.iterable"]
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-explicit-any"]
		}
	}
}
